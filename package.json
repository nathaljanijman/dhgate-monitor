{
  "name": "dhgate-monitor",
  "version": "2.0.0",
  "description": "Professional DHgate Product Monitoring Platform - Enterprise-Grade E-commerce Intelligence",
  "type": "module",
  "main": "cloudflare_app.js",
  "scripts": {
    "dev": "wrangler dev --local --port 3000",
    "dev:remote": "wrangler dev --env dev --port 8787",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:safe": "./scripts/deploy.sh",
    "deploy:dev:safe": "./scripts/deploy.sh dev",
    "deploy:prod:safe": "./scripts/deploy.sh production",
    "dev:password": "./scripts/update-dev-password.sh",
    "db:migrate:dev": "wrangler d1 execute dhgate-monitor-dev --env dev --remote --file=./init.sql",
    "db:migrate:prod": "wrangler d1 execute dhgate-monitor --remote --file=./init.sql",
    "tail": "wrangler tail",
    "tail:dev": "wrangler tail --env dev",
    "login": "wrangler login",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:qa": "node tests/simple-test-runner.js",
    "test:qa:full": "node tests/e2e/qa-runner.js",
    "test:accessibility": "playwright test tests/e2e/compliance/accessibility.test.js",
    "test:performance": "playwright test tests/e2e/performance/seo.test.js",
    "lint": "eslint cloudflare_app.js",
    "format": "prettier --write *.js",
    "build": "webpack --config webpack.config.js",
    "build:analyze": "webpack --config .bundleanalyzer.js",
    "build:stats": "webpack --config webpack.config.js --json > build-stats.json",
    "optimize": "npm run build && npm run build:analyze",
    "perf:check": "node scripts/performance-check.cjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathaljanijman/dhgate-monitor.git"
  },
  "keywords": [
    "dhgate",
    "monitoring",
    "e-commerce",
    "automation",
    "cloudflare-workers",
    "product-tracking",
    "dropshipping",
    "alerts",
    "business-intelligence",
    "market-research"
  ],
  "author": "Nathalja Nijman <support@dhgate-monitor.com>",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "nodemailer": "^7.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.12",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.2.5",
    "wrangler": "^4.33.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ],
    "collectCoverageFrom": [
      "cloudflare_app.js",
      "!node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
